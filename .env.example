# Secret key for JWT
SECRET_KEY=your_super_secret_key

# JWT settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database URL
# SQLite (default)
DATABASE_URL=sqlite:///./auth.db

# To use Postgres instead, uncomment the line below and comment out the SQLite line
# DATABASE_URL=postgresql://authuser:supersecurepassword@db:5432/authdb

# To use MySQL instead (you must install a mysql driver), uncomment:
# DATABASE_URL=mysql+pymysql://user:password@localhost/dbname
